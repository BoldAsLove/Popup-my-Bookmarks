{
  "compilerOptions": {
    "downlevelIteration": true,
    "esModuleInterop": true,
    "isolatedModules": false,
    "jsx": "react",
    "lib": ["es2019", "dom"],
    "noEmit": true,
    "resolveJsonModule": true,
    "sourceMap": false,
    "strict": true
  },
  "include": [
    "__mocks__/**/*.ts",
    "scripts/**/*.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    "webpack.config.ts"
  ]
}
